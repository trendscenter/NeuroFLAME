{
  "name": "electronapp",
  "version": "1.0.0",
  "description": "desktop app",
  "main": "build/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc && cp src/preload.js build/preload.js",
    "start": "npm run build && electron . --",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start-configured": "npm run build && electron . --config=../../configs/electronApp1.json",
    "start-configured-2": "npm run build && electron . --config=../../configs/electronApp2.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "edge-federated-client": "1.0.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.12.7",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "coinstac2",
    "productName": "coinstac2",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "../reactPoc/build",
        "to": "app/build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": [
        {
          "target": "pkg",
          "arch": [
            "universal"
          ]
        }
      ],
      "type": "development",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "arch": [
        "x64"
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
